<!doctype html>
<html lang="en">

<head>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
  <link rel="stylesheet" href="css/style.css">
  <title>Cruelty Free</title>
</head>

<body>

  <div class="container" id="carrusel">
    <br></br>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
      <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <% for(var i=1; i<business.length; i++){ %>
          <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="<%= i %>" aria-label="Slide <%= i+1 %>"></button>
        <% } %>
      </div>
      <div class="carousel-inner">

        <div class="carousel-item active">
          <img src="<%= images[business[0]] %>" class="d-block w-100" alt="<%= business[0] %>">
          <div class="carousel-caption d-none d-md-block">
            <h5><b><%= business[0] %></b></h5>
          </div>
        </div>
        <% for(var i=1; i<business.length; i++){ %>
        <div class="carousel-item">
          <img src="<%= images[business[i]] %>" class="d-block w-100" alt="<%= business[i] %>">
          <div class="carousel-caption d-none d-md-block fondo">
            <h5><b><%= business[i] %></b></h5>
          </div>
        </div>
        <% } %>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <form action="/search" method="POST">
    <div class="container" id="contenedor">
      <br></br>
      <div class="row">
        <div class="col-sm-1">
          <img src="img/logo.png" class="img-fluid" alt="200">
        </div>
        <div class="col-sm-7">
          <label for="producto">Ingrese un producto</label>
          <!-- <h6>Ingrese un producto </h6> -->
          <input type="text" class="form-control" placeholder="Producto" aria-label="Producto" id="producto" name="producto">
        </div>
        <div class="col-sm-4">
          <label for="marca">Ingrese la marca u organización</label>
          <!-- <h6>Ingrese la marca u organización </h6> -->
          <input type="text" class="form-control" placeholder="Empresa u organización" aria-label="Empresa" id="marca" name="marca">
        </div>
      </div>

      <div class="row">
        <div class="col-sm-1"></div>
        <div class="col-sm-11">
          <button type="submit" class="btn">Buscar</button>
        </div>
      </div>
      <br></br>
    </div>
  </form>




  <div class="container" id="busqueda">

    <div class="row">
      <div class="col-sm-1"></div>
      <div class="col-sm-7">
        <div class="container" id="cruelty">
          <div class="row">
            <div class="col-sm-10 status">
              <p class="text-center"><b><%= status %></b></p>
            </div>

            <div class="col-sm-2">
              <!-- <%= img %> -->
              <div style="width:100%;height:0;padding-bottom:76%;position:relative;"><iframe src="<%= img %>" width="100%" height="100%" style="position:absolute" frameBorder="0" class="giphy-embed" allowFullScreen></iframe></div>
              <!-- <img src="img/logo.png" class="img-fluid" alt="200"> -->
            </div>
          </div>
        </div>
        <br></br>
        <div class="container" id="productos">
          <h4 class="text-center">Productos</h4>
          <% products.forEach(elem =>{ %>
          <div class="row">
            <div class="col-sm-12">
              <div class="card mb-3" style="max-width: 540px;">
                <div class="row g-0">
                  <div class="col-md-4">
                    <img src="<%= elem.image %>" class="img-fluid" alt="<%= elem.title %>">
                  </div>
                  <div class="col-md-8">
                    <div class="card-body">
                      <h5 class="card-title"><%= elem.title %></h5>
                      <p class="card-text"><small class="text-muted">Precio: $ <%= elem.price %></small></p>
                      <p class="card-text"><a class="text-decoration-none" href="https:<%= elem.url %>" target="_blank" >Comprar</a></p>

                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <% }) %>



        </div>
      </div>
      <div class="col-sm-4">
        <div class="container" id="noticias">
          <h4 class="text-center">Noticias</h4>
          <% var n_news= news.length/3 %>
          <% for (var i=0; i<news.length/3; i++){ %>
          <a class="text-decoration-none" target="_blank" href="<%= news[i] %>">
          <div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
            <div class="card-header"><%= news[n_news] %></div>
            <div class="card-body">
              <img src="<%= news[n_news+1] %>" class="img-fluid" alt="200">

            </div>
          </div>
          </a>
          <% n_news+=2 %>
          <% } %>
          <!-- <div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
            <div class="card-header">Noticia 2</div>
            <div class="card-body">
              <img src="img/conejo.jpg" class="img-fluid" alt="200">
            </div>
          </div>
          <div class="card text-dark bg-light mb-3" style="max-width: 18rem;">
            <div class="card-header">Noticia 3</div>
            <div class="card-body">
              <img src="img/conejo.jpg" class="img-fluid" alt="200">
            </div>
          </div> -->

        </div>
      </div>
    </div>

  </div>

  <br></br>


  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 2: Separate Popper and Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js" integrity="sha384-SR1sx49pcuLnqZUnnPwx6FCym0wLsk5JZuNx2bPPENzswTNFaQU1RDvt3wT4gWFG" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.min.js" integrity="sha384-j0CNLUeiqtyaRmlzUHCPZ+Gy5fQu0dQ6eZ/xAww941Ai1SxSY+0EQqNXNE6DZiVc" crossorigin="anonymous"></script>
</body>

</html>
